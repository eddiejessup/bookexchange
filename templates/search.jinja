{% extends "base.jinja" %}
{% block title %}Book Exchange - Search{% endblock %}
{% block content %}
    <div class="search">
        <div class="container">
            <div class="page-header"><h1 class="h1">Search</h1></div>
            <div class="col-xs-12 col-md-6">
                <div class="form-group">
                    <form action="{{ url_for('results') }}">
                        <!-- <label for="prof" class="sr-only">Profile URL</label> -->
                        <input type="text" name="profile_url" id="profile-url" class="form-control" placeholder="Profile URL">
                        <!-- <label for="query" class="sr-only">Book Query</label> -->
                        <input type="text" name="query" id="query" class="form-control" placeholder="Book Query">
                        <input class="form-control" type="submit" value="Search">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
